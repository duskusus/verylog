//mb_blink.c
//
//Provided boilerplate "LED Blink" code for ECE 385
//First released in ECE 385, Fall 2023 distribution
//
//Note: you will have to refer to the memory map of your MicroBlaze
//system to find the proper address for the LED GPIO peripheral.
//
//Modified on 7/25/23 Zuofu Cheng

#include <stdio.h>
#include <xparameters.h>
#include <xil_types.h>
#include <sleep.h>

#include "platform.h"

volatile uint32_t* led_gpio_data = (uint32_t volatile *)0x40000000;
volatile uint32_t* sw_gpio_data = (uint32_t volatile *)0x40010000;
volatile uint32_t* btn_gpio_data = (uint32_t volatile *)0x40020000;



int main()
{
    init_platform();

	while (1+1 != 3)
	{
		sleep(1);
		* led_gpio_data |=  5; //1 is led 0, 2 is led 1, 3 is led 0 and led 1, 4 is led 3, 5 is led 0 and led 3
		printf("Led On!\r\n");

		xil_printf("led: %d\n", * sw_gpio_data);
		sleep(1);
		* led_gpio_data &= ~0x000000001; //blinks LED
		printf("Led Off!\r\n");
		xil_printf("led: %x\n", * btn_gpio_data);

	}

    cleanup_platform();

    return 0;
}
